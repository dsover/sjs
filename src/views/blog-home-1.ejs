<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Website of Sarah J. Sover, author of epic sword and sorcery novels and dark fantasy stories, reader of books, and creator of mystical realms filled with imaginary creatures and magical powers.">
    <meta name="author" content="Studio SJS">
    <title>Sarah J Sover - Blog</title>
    <link rel="shortcut icon" type="image/x-icon" href="/images/title.png" />
    <!-- Bootstrap Core CSS -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/css/modern-business.css" rel="stylesheet">
    <!-- Custom Fonts -->
    <link href="/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <%- nav %>
        </div>
        <!-- /.container -->
    </nav>
    <!-- Page Content -->
    <div class="container">
        <!-- Page Heading/Breadcrumbs -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Blog Home</h1>
            </div>
        </div>
        <!-- /.row -->
        <div class="row">
            <!-- Blog Entries Column -->
            <div class="col-md-8">
                <!-- Blog Post loop -->
                <% for(var i=0; i<posts.length; i++) {%>
                    <h2>
                        <a href="/blog/<%=posts[i]._id%> "><%=posts[i].title%></a>
                    </h2>
                    <%-posts[i].content.substring(0,750)%>
                    <%if (posts[i].content.length > 750){%>
                        ...
                    <%}%>
                <p><a class="btn btn-primary" href="/blog/<%=posts[i]._id%>">Read More <i class="fa fa-angle-right"></i></a></p>
                <p><i class="fa fa-clock-o"></i> Posted on <%=posts[i].created_at.toLocaleString("en-us", { month: "long" })%> <%=posts[i].created_at.getDate()%> <%=posts[i].created_at.getFullYear()%></p>
                    <hr>
                <% } %>
                <!-- Pager -->
                <ul class="pager">
                    <%if(curPage < lastPage){%>
                    <li class="previous">
                        <a href="/blogs/<%-(curPage+1)%>">&larr; Older</a>
                    </li>
                    <%}%>
                    <%if(curPage > 0){%>
                    <li class="next">
                        <a href="/blogs/<%-(curPage-1)%>">Newer &rarr;</a>
                    </li>
                    <%}%>
                </ul>
            </div>
        </div>
        <!-- /.row -->
        <hr>
        <!-- Footer -->
        <footer>
            <%- footer %>
        </footer>
    </div>
    <!-- /.container -->
    <!-- include sign up modal from components folder    -->
    <%-subscribeModal%>
    <!-- jQuery -->
    <script src="/js/jquery.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/subscribe.js"></script>
    <script src="/js/googleAnlytics.js"></script>
</body>
</html>