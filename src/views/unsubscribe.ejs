<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Website of Sarah J. Sover, author of fantasy novels, reader of books, and creator of mystical realms filled with imaginary creatures with magical powers.">
    <meta name="author" content="Studio SJS">

    <title>Sarah J Sover - Unsubscribe</title>
    <link rel="shortcut icon" type="image/x-icon" href="/images/title.png" />
    <!-- Bootstrap Core CSS -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="/css/modern-business.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body>

    <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <%- nav %>
        </div>
        <!-- /.container -->
    </nav>

    <!-- Page Content -->
    <div class="container">

        <!-- Page Heading/Breadcrumbs -->
        <div class="row">
            <div class="col-lg-12">
                <ol class="breadcrumb">
                    <li><a href="/">Home</a>
                    </li>
                    <li class="active">unsubscribe</li>
                </ol>
            </div>
        </div>
        <!-- /.row -->

        <div class="row">

            <div class="col-lg-12">
                <div class="jumbotron">
                    <h1><span class="unsubscribe">Unsubscribe</span>
                    </h1>
                    <p>Sorry to see you go! Just submit your email to unsubscribe:</p>

                    <form id="unSubscribe" name="unSubscribe" class="form-inline" action="/subscription/unsubscribe" method="post">
                        <div id="unSubscribeInput" class="input-group">
                            <label for="email_input" class="sr-only">Email Address</label>
                            <input id="email_input" name="email_input" class="form-control" placeholder="Email Address" />
                        </div>
                        <input id="unSubscribeButton" type="submit" value="Submit" class="btn btn-primary"></input>
                    </form>
                    <div id="unSubscribeSuccess" class="alert alert-success noShow">
                        <strong>You have unsubscribed!</strong>
                    </div>
                     <div id="unSubscribeError" class="alert alert-danger noShow">
                        <strong>Error unsubscribing please check your email and try again!</strong>
                    </div>
                </div>
            </div>

        </div>

        <hr>

        <!-- Footer -->
        <footer>
            <%- footer %>
        </footer>

    </div>
    <!-- /.container -->
    <!-- include sign up modal from components folder    -->
    <%-subscribeModal%>
        <!-- jQuery -->
        <script src="/js/jquery.js"></script>

        <!-- Bootstrap Core JavaScript -->
        <script src="/js/bootstrap.min.js"></script>

        <script src="/js/subscribe.js"></script>
        
        <script src="/js/googleAnlytics.js"></script>

</body>

</html>