<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content=" Website of Sarah J. Sover, author of epic sword and sorcery novels and dark fantasy stories, reader of books, and creator of mystical realms filled with imaginary creatures and magical powers.">
    <meta name="author" content="Studio SJS">
    <meta property="og:image" content="http://www.sarahjsover.com/images/theBox.jpg">
    <meta property="og:url" content="http://www.sarahjsover.com"/>
    <meta property="og:site_name" content="Sarah J Sover"/>
    <meta property="og:title" content="Website of author Sarah J. Sover"/>
    <meta property="og:description" content="Website of Sarah J. Sover, author of epic sword and sorcery novels and dark fantasy stories, reader of books, and creator of mystical realms filled with imaginary creatures and magical powers."/>
    <link rel="image_src" type="image/jpeg" href="http://www.sarahjsover.com/images/theBox.jpg" />

    <title>Sarah J Sover</title>
    <link rel="shortcut icon" type="image/x-icon" href="/images/title.png" />
    <!-- Bootstrap Core CSS -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="/css/modern-business.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body>

    <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <%- nav %>
        </div>
        <!-- /.container -->
    </nav>
    <!-- Header Image-->
    <div id="wrapperHeader">
        <div id="header">
            <img src="/images/header.jpg" alt="logo" />
        </div>
    </div>
    <!-- Page Content -->
    <div class="container">

        <!-- Marketing Icons Section -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                </h1>
            </div>
            <div class="col-md-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4><a href="/books"><i class="fa fa-fw fa-book"></i> Books</a></h4>
                    </div>
                    <div class="panel-body">
                        <a href="/books">
                            <img class="img-responsive img-hover" src="/images/coming_soon.jpg" alt="">
                        </a>
                        <p><h3>THE KEY OF ARGOS</h3>
                            <h4>Adult Epic Fantasy</h4>
                            Ronan Agnatha raises a rebellion to seize her rightful throne and avenge the slaughter of her family by the cruel and corrupt Magistratum. In her ...</p>
                        <a href="/books" class="btn btn-default">Read More</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4><a href="/blogs/0"><i class="fa fa-fw fa-newspaper-o"></i> Blog</a></h4>
                    </div>
                    <div class="panel-body">
                        <h3><a href="blog/<%=post._id%>"> <%=post.title%></a></h3>
                        <br>
                        <%-post.content.substring(0,750)%>
                            <%if (post.content.length > 750){%>
                                ...
                                <p><a class="btn btn-default" href="/blog/<%=post._id%>">Read More <i class="fa fa-angle-right"></i></a></p>
                                <%}%>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4><i class="fa fa-fw fa-twitter-square"></i> Twitter </h4>
                    </div>
                    <div class="panel-body">
                        <a class="twitter-timeline" data-dnt="true" href="https://twitter.com/SarahJSover" data-widget-id="706095586190233600"></a>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.row -->
        <hr>
        <!-- Footer -->
        <footer>
            <%- footer + "<small>Header art created by Nicky Riale</small>" %>
        </footer>
    </div>
    <!-- /.container -->

    <!-- include sign up modal from components folder    -->
    <%-subscribeModal%>

        <!-- jQuery -->
        <script src="/js/jquery.js"></script>

        <!-- Bootstrap Core JavaScript -->
        <script src="/js/bootstrap.min.js"></script>

        <script src="/js/subscribe.js"></script>

        <script src="/js/twitter.js"></script>
    
        <script src="/js/googleAnlytics.js"></script>
</body>

</html>